<div class="tweet d-flex py-3 px-3">
  <div class="flex-shrink-0">
    <%= image_tag tweet.user.avatar, size: "44x44", class: "rounded-circle" %>
  </div>
 
  <div class="flex-grow-1 ms-3">
    <p>@<%= tweet.user.username %> Â·
      <% if tweet.created_at < 1.day.ago %>
        <%= tweet.created_at.strftime("%B %e") %>
      <% else %>
        <%= distance_of_time_in_words(Time.now, tweet.created_at, include_seconds: false, abbreviated: true) %>
      <% end %>
    </p>
    <p class="mb-0"><%= tweet.body %></p>
  </div>

</div>

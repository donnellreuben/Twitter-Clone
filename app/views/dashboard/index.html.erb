<div class="container text-center">
</div>

<!-- COLUMNS -->
<div class="container text-center">
  <div class="row">
  
  <!-- Left Column -->
    <div class="col">    
    <!-- Sidebar Navbar -->
      <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "btn btn-primary btn-lg"  %>
    </div>

  <!-- Center Column -->
    <div class="col">    
    <!-- tweet form -->
      <%= form_with model: Tweet.new, url: tweets_path, method: :post, local: true do |f| %>
        <%= f.text_field :body %>
        <%= f.submit %>
      <% end %>   
    <!-- tweets -->  
      <ul>
        <% Tweet.find_each do |tweet| %>
          <li><%=  tweet.body%></li>
        <% end %>
      </ul>
    </div>

  <!-- Right Column -->
    <div class="col">
      Search Bar
    </div>
  </div>
</div>
      </a> 

       <!-- Compose Tweet Button -->
      <a href="#" class="d-flex align-items-center fs-4 mb-3 ms-3" data-bs-toggle="modal" data-bs-target="#compose-modal">
        <div style="display: inline-block; background-color: rgb(29, 155, 240); border-radius: 100%; padding: 5px;" class="icon", id ="compose-tweets">
          <svg viewBox="0 0 26 30" width="35px" height="30px"><g><path d="M23 3c-6.62-.1-10.38 2.421-13.05 6.03C7.29 12.61 6 17.331 6 22h2c0-1.007.07-2.012.19-3H12c4.1 0 7.48-3.082 7.94-7.054C22.79 10.147 23.17 6.359 23 3zm-7 8h-1.5v2H16c.63-.016 1.2-.08 1.72-.188C16.95 15.24 14.68 17 12 17H8.55c.57-2.512 1.57-4.851 3-6.78 2.16-2.912 5.29-4.911 9.45-5.187C20.95 8.079 19.9 11 16 11zM4 9V6H1V4h3V1h2v3h3v2H6v3H4z" fill="white"></path></g></svg>
        </div>
      </a>

      <!-- Logout Button --> 
      <div class="position-relative ms-4 w-100">
        <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "position-absolute link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" %>
      </div>

    </div>
    <!-- Sidebar Navbar fin -->
  <!-- Left Column fin -->

  <!-- Center Column -->
    <div class="col-7 ms-5">    
    <!-- search form -->
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :query, placeholder: "Search Twitter" %>
        <%= f.submit "Search" %>
      <% end %>
    </div>
 <!-- Center Column fin -->

<!-- Right Column -->
    <div class="col">
      Search Bar
    </div>
<!-- Right Column fin -->
</div>
<!-- COLUMNS fin -->

<!-- TWEETS MODAL -->
<%= render "tweets/index"  %>